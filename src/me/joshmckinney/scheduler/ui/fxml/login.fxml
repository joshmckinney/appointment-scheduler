<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="loginPane" onMouseClicked="#clickFocusPane" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.251" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.joshmckinney.scheduler.ui.Login">
   <children>
      <VBox alignment="CENTER" focusTraversable="true" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="tfUser" maxWidth="-Infinity" onKeyPressed="#loginReturnKey" prefHeight="40.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></TextField>
            <PasswordField fx:id="pfPass" maxWidth="-Infinity" onKeyPressed="#loginReturnKey" prefHeight="40.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin></PasswordField>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButton" onKeyPressed="#loginButton" text="Login">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
